---
import "../../styles/global.css";
import { IndexPage } from "@/components/dani_strauss/index_page";
import { PAGES_CONFIG } from "@/components/dani_strauss/constants/pages"
import { Header } from "@/components/shared/pages/header";
import { Footer } from "@/components/shared/pages/footer";
import { Main } from "@/components/shared/pages/main";

const title = PAGES_CONFIG.index.title
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="h-screen flex flex-col">
    <Header client:load />
    <Main title={title} backgroundImage="/home_background.jpg" isNotScrollable>
      <IndexPage client:load />
    </Main>
    <Footer />
  </body>
</html>

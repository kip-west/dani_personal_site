---
import "../styles/global.css";
import { Body } from "@/components/shared/pages/body.tsx";
import { ServicesPage } from "@/components/services_page";
import { PAGES_CONFIG } from "src/constants/pages.ts"

const title = PAGES_CONFIG.services.title
---

<html lang="en">
  <head>
    <meta charSet="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>

  <Body title={title}>
    <ServicesPage />
  </Body>
</html>
